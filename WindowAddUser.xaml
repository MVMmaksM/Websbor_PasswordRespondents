<Window x:Class="Websbor_PasswordRespondents.WindowAddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Websbor_PasswordRespondents"
        mc:Ignorable="d"
        Title="Добавление пользователя" Height="209.72" Width="347.507" Background="#FFAAA9A9" ResizeMode="NoResize">
    <Grid>
        <Label Content="Введите имя пользователя" VerticalAlignment="Top" Height="30" HorizontalContentAlignment="Center" Margin="74,29,72,0"/>
        <TextBox x:Name="TxtBoxUserName" HorizontalAlignment="Center" Height="23"  TextWrapping="Wrap" Text=""  Width="156"/>
        <Button Content="Сохранить" Click="ButtonSaveUser_Click" Background="#FFF0F0F0" FontFamily="Constantia" Margin="137,118,130,0" Height="20" VerticalAlignment="Top">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="2"/>
                </Style>
            </Button.Resources>
            <Button.Effect>
                <DropShadowEffect Color="Black" Direction="290" ShadowDepth="3" Opacity="0.6"/>
            </Button.Effect>
        </Button>
        <StatusBar Height="20" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
